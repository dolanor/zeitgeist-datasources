<Addin id="Zeitgeist"
    namespace="Tomboy"
    name="Zeitgeist Integration"
    author="Laszlo Pandy <laszlok2@gmail.com>"
    description="Logs usage data to Zeitgeist."
    category="Desktop Integration"
    defaultEnabled="true"
    version="0.1">

    <Runtime>
        <Import assembly="Zeitgeist.dll" />
    </Runtime>

    <Dependencies>
        <Addin id="Tomboy" version="0.10" />
    </Dependencies>

    <Extension path="/Tomboy/ApplicationAddins">
        <ApplicationAddin type="Tomboy.Zeitgeist.ZeitgeistAddin" />
    </Extension>
</Addin>
